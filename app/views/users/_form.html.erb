<div class="hero-text">
  <%= form_for @user, html:{multipart: true} do |f| %>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %><br>

    <%= f.label :username %>
    <%= f.text_field :username %><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br>

    <%= f.submit %>
  <% end %>
</div>
