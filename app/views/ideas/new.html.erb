<%= form_for [@user, @idea] do |f| %>
 <%= f.label :category %>
 <%= f.collection_select(:category_id, Category.all, :id, :title) %>

 <%= f.label :title %>
 <%= f.text_field :title %>

 <%= f.label :body %>
 <%= f.text_field :body %>

 <%= f.label :image %>
 <%= f.collection_select(:image_id, Image.all, :id, :title) %>

 <%= f.label :image %>
 <%= file_field_tag "images[]", type: :file, multiple: true %>

 <%= f.submit %>
<% end %>
