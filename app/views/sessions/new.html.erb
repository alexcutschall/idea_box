<div class="hero-text">
  <h1>Login Here!</h1>
  <%= form_tag login_path do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= submit_tag "Log In" %>
  <% end %>
<h5>Don't have an account yet?<br><%= link_to "Sign Up!", new_user_path %></h5>
</div>
